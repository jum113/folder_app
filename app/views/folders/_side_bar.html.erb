<div class="sidebar bg-light col-2">

  <div class="sidebar-header shadow d-flex align-items-center">
    <i class="bi bi-journal-text mx-2" style="font-size:24px">MemoApp</i>
  </div>
  <div class="memos-folder overflow-scroll">

    <div class="memo-folder pt-4 ms-2">

      <div class="folder-name">

        <% @folders.each do |folder| %>
          
            <%= link_to folder.folder_name, "#", class: "d-block pb-3 text-decoration-none" %>
          
        <% end %>

      </div>
    </div>

  </div>
  <div class="sidebar-footer d-flex justify-content-between align-items-center">

    <!-- New Folder Button trigger modal -->
    <button type="button" class="btn btn-success ms-3" data-bs-toggle="modal" data-bs-target="#exampleModal">
      <i class="bi bi-plus-circle me-1">新規フォルダー</i>
    </button>

    <!-- New Folder Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">新規フォルダー</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <%= form_with model: @folder, id: "folder-form" do |f| %>
            <div class="modal-body">
              <div class="form-group">
                <%= f.label :folder_name, "フォルダー名" %>
                <%= f.text_field :folder_name, class: "form-control", id: "folder" %>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">閉じる</button>
              <%= f.submit "作成する", class: "btn btn-primary", id: "folder-submit" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

  </div>

</div>